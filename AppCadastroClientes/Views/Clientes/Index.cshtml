@model IEnumerable<AppCadastroClientes.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}
@Styles.Render("~/Content/css")
<h2 class="bi bi-people-fill"> Clientes</h2>

<div>
    <div class="form">
        <a class="btn btn-primary" id="btnNovo" href="@Url.Action("Create", "Clientes")" role="button">Novo Cliente</a>
        <div class="Filtros">
            <input class="form-check-input" type="checkbox" id="somenteAtivos" checked>
            <label class="form-check-label" for="somenteAtivos">Somente Ativos</label>
            <input  id="txtnome" type="text" placeholder="Nome">
            <input  id="txtdocumento" type="text" placeholder="Documento">
            <a class="btn btn-outline-primary" id="btnfiltrar" role="button" >Filtrar</a>
        </div>
    </div>
</div>

<div id="clientesTable">
    @Html.Partial("_ClientesTable", Model)
</div>